{
  "name": "floatnote",
  "version": "1.3.0",
  "description": "Floating notepad with checklist, habit tracker, and configurable dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.floatnote.app",
    "productName": "FloatNote",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "identity": null
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json"
    ]
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^25.1.8"
  }
}
