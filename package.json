{
  "name": "floatnote",
  "version": "1.3.1",
  "description": "Floating notepad with checklist, habit tracker, and configurable dashboard",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/danieljpuusitalo/FloatNote.git"
  },
  "homepage": "https://github.com/danieljpuusitalo/FloatNote",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 && electron-builder --win --arm64",
    "build:x64": "electron-builder --win --x64",
    "build:arm64": "electron-builder --win --arm64"
  },
  "keywords": ["electron", "desktop", "notepad", "productivity", "floating", "checklist", "habit-tracker", "dashboard"],
  "author": "Daniel J Puusitalo",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.floatnote.app",
    "productName": "FloatNote",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "identity": null
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "${productName} Setup ${version}-${arch}.${ext}"
    },
    "icon": "build/icon.ico",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json",
      "build/**"
    ]
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^25.1.8"
  }
}
